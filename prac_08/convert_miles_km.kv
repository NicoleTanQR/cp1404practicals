BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert(input_miles.text)
    Label:
        font_size: 48
        text: app.output_kilometres
        color: (1, 1, 0, 1)
